<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<% if user_signed_in? %>
  <% if current_user.artisan? %>
    <div class="bg-light">
        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="card profile-card shadow  mt-4">
                <div class="card-body text-center">
                    <img src="https://via.placeholder.com/150" alt="User Profile" class="rounded-circle profile-img mb-3">
                    <h3 class="card-title mb-0"><%= @user.last_name %></h3>
                    <h3 class="card-title mb-0"><%= @user.first_name %></h3>
                    <p class="text-muted"><%= @user.user_type %></p>
                    <p class="card-text"><%= @user.phone_number %></p>
                    <div class="d-flex justify-content-center mb-3">
                        <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-github"></i></a>
                    </div>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item bg-transparent">
                            <i class="bi bi-envelope-fill me-2"></i><%= @user.email%>
                    <div class="d-flex justify-content-between text-center mt-4">
                        <div>
                            <h5 class="mb-0"></h5>
                            <small class="text-muted"></small>
                        </div>
                        <div>
                            <h5 class="mb-0"><%= @user.products.count %></h5>
                            <small class="text-muted">Products</small>
                        </div>
                        <div>
                            <h5 class="mb-0"></h5>
                            <small class="text-muted"></small>
                        </div>
                    </div>
                    <%=link_to'My Products', my_products_path, class: "btn btn-outline-primary"%>
                </div>
            </div>
        </div>
    </div>
  <%else%>
    <div class="bg-light">
        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="card profile-card shadow  mt-4">
                <div class="card-body text-center">
                    <img src="https://via.placeholder.com/150" alt="User Profile" class="rounded-circle profile-img mb-3">
                    <h3 class="card-title mb-0"><%= @user.last_name %></h3>
                    <h3 class="card-title mb-0"><%= @user.first_name %></h3>
                    <p class="text-muted"><%= @user.user_type %></p>
                    <p class="card-text"><%= @user.phone_number %></p>
                    <div class="d-flex justify-content-center mb-3">
                        <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-github"></i></a>
                    </div>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item bg-transparent">
                            <i class="bi bi-envelope-fill me-2"></i><%= @user.email%>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <%end %>
<%end %>
