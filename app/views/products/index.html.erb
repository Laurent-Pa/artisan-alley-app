<div class="container">
  <h1>Display products</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="card-trip m-3 col-sm">
        <%= link_to product_path(product) do %>
          <%= cl_image_tag product.photo.key.to_s, height: 300, width: 400, crop: :fill %>
          <div class="card-trip-infos">
            <div>
              <h2><%= product.name %></h2>
              <p><%= product.description %></p>
            </div>
            <h2 class="card-trip-pricing"><%= product.price%>$</h2>
          </div>
        <% end %>
      </div>
    <% end %>
    <% if user_signed_in? %>
      <% if current_user.artisan? %>
        <%= link_to "Add New Product",  new_product_path %>
      <% end %>
    <% end %>
  </div>
</div>
